---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
	titulo: string;
}

const { titulo } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{titulo}</title>
		<ClientRouter />
	</head>
	<body class="bg-slate-800 text-slate-100 m-auto max-w-5xl">
		<main class="mt-10">
			<slot />
		</main>
	</body>
</html>
